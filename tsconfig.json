{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "allowJs": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "rules": {
    "import-sources-order": "any",
    "no-var-requires": false
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
